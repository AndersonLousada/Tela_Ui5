<mvc:View
	controllerName="invent.clientes.controller.Overview"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout">

	<Page title="INVENT SOFTWARE">
		<content>

			<GenericTile 
			    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
			    header="Listar Clientes"
				subheader="Contatos cadastrados"
			    press="navegarParaLista">
				<TileContent unit="Goiânia" footer="16/08/2021">
					<NumericContent  value="5" valueColor="Good" withMargin="false" icon="sap-icon://activities" />
				</TileContent>
			</GenericTile>	
			
			<GenericTile 
				class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
				header="Cadastrar Clientes"
				subheader="Novo contato"
				press="inserirCadastroNovo">
				<TileContent unit="Goiânia" footer="16/08/2021">
					<NumericContent  value="" valueColor="Good" withMargin="True" icon="sap-icon://add-contact" />
				</TileContent>
			</GenericTile>

		</content>
	</Page>
</mvc:View>