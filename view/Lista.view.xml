<mvc:View
		controllerName="invent.clientes.controller.Lista"
		xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page showNavButton="true" navButtonPress=".onNavBack" title="Lista de clientes" >

	<Button
					icon="sap-icon://hello-world"
					text="Cadastro Novo"
					press="inserirCadastroNovo"/>

        <Table items="{
            path : 'invoice>/Invoices',
            sorter : {
                path : 'ShipperName'
            }
        }">    
		        
            <columns>
                <Column>
                    <Text text="Nome" />
                </Column>
                <Column>
                    <Text text="CÃ³digo" />
                </Column>
                <Column>
                    <Text text="CPF" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle" type="Navigation" press="navegarParaDetalhes">
                    <cells>
                        <Text text="{invoice>Nome}" wrapping="false" />
                        <Text text="{invoice>Codigo}" wrapping="false"/>
                        <Text text="{invoice>CPF}" wrapping="false"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

    </Page>

</mvc:View>