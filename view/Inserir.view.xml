<mvc:View

	controllerName="invent.clientes.controller.Inserir"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"	>

	<Page showNavButton="true" navButtonPress=".onNavBack" title="Inserir Novo Cadastro">

		<customHeader>
			<Toolbar>
				<Button type="Back" press=".onNavBack" />
				<ToolbarSpacer/>
				<Title text="Novo Cliente" level="H1"/>
				
				<ToolbarSpacer/>
					<Button	icon="sap-icon://home" text="Voltar para início" press="voltarParaInicio"/>
			</Toolbar>
		</customHeader>

		<VBox class="sapUiSmallMargin">
		<f:Form id="FormChange480_12120"
			editable="true">
			<f:title>
				<core:Title text="Dados do cliente" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>

			<f:FormContainer title="Informaçõs pessoais">
					<f:FormElement label="Nome">
						<f:fields>
							<Input value="{SupplierNome}" id="nome" placeholder="Insira Nome"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="CPF">
						<f:fields>
							<Input value="{SupplierCPF}" id="CPF" placeholder="Insira CPF"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Data de Nascimento">
						<f:fields>
							<DatePicker
								id="DP2"
								value="2014-03-26" valueFormat="yyyy-MM-dd" displayFormat="long"
								change="handleChange"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="CNH">
						<f:fields>
							<Input value="{SupplierCNH}" id="CNH" placeholder="Insira Nº CNH"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Categoria">
							<f:fields>
								<Select id="Categoria" selectedKey="{Categoria}" >
									<items>
										<core:Item text="A" key="A"/>
										<core:Item text="B" key="B"/>
										<core:Item text="C" key="C"/>
										<core:Item text="D" key="D"/>
										<core:Item text="E" key="E"/>
									</items>
								</Select>
								
							</f:fields>
						</f:FormElement>
					
			</f:FormContainer>
			<f:formContainers>
				<f:FormContainer title="Endereço">
					<f:formElements>
						<f:FormElement label="Logradouro/Número">
							<f:fields>
								<Input value="{Logradouro}" placeholder="Insira Logradouro" />
								<Input value="{HouseNumber}" placeholder="Número">
									<layoutData>
										<l:GridData span="XL2 L2 M2 S4" />
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="UF/CEP/Cidade">
							<f:fields>
								<Select id="UF" selectedKey="{UF}">
									<items>
										<core:Item text="GO" key="GO"/>
										<core:Item text="SP" key="SP"/>
										<core:Item text="RJ" key="RJ"/>
									</items>
								</Select>
								<Input value="{CEP}" placeholder="Insira CEP">
									<layoutData>	
										<l:GridData span="XL2 L2 M2 S4" />
									</layoutData>
								</Input>
								<Input value="{Cidade}" placeholder="Insira Cidade" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Nacionalidade">
							<f:fields>
								<Select id="Nacionalidade" selectedKey="{Nacionalidade}">
									<items>
										<core:Item text="Brasil" key="Brasil"/>
										<core:Item text="Alemanha" key="Alemanha"/>
										<core:Item text="Estados Unidos" key="Estados Unidos"/>
										<core:Item text="Japão" key="Japão"/>
										<core:Item text="China" key="China"/>
										<core:Item text="México" key="México"/>
										<core:Item text="Argentina" key="Argentina"/>
										<core:Item text="Canadá" key="Canadá"/>
										<core:Item text="Russia" key="Russia"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
					</f:formElements>

				</f:FormContainer>
			

				
			</f:formContainers>
		</f:Form>
		<f:Form id="FormChange480_12120-2"
			editable="true">
			<f:title>
				<core:Title text=" " />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="Contatos">
					<f:formElements>
						<f:FormElement label="Tel./whatsapp">
							<f:fields>
								<Input value="{Tel/whatsapp}" placeholder="Insira Nº Telefone" />
							</f:fields>
						</f:FormElement>

						<f:FormElement label="Fixo">
							<f:fields>
								<Input value="{Fixo}" placeholder="Insira Nº Telefone fixo" />
							</f:fields>
						</f:FormElement>

						<f:FormElement label="Email">
							<f:fields>
								<Input value="{EMail}" placeholder="Insira email" />
							</f:fields>
						</f:FormElement>
						
						
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<ToolbarSpacer/>
		<Button
			text="Salvar"
			class="sapUiSmallMarginBottom"
			press=".onConfirmationMessageBoxPress"
			width="280px"
			ariaHasPopup="Dialog"
			icon="sap-icon://accept" />
	</VBox>
	</Page>
</mvc:View>